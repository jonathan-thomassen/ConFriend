@page
@model ConFriend.Pages.Admin.FeatureTest.EditFeatureModel
@{
    ViewData["Title"] = "Edit feature";
}

<h4>Edit Feature</h4>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Feature.FeatureId" class="control-label">Name</label>
        <input asp-for="@Model.Feature.FeatureId" readonly="readonly" class="form-control" />
        <span asp-validation-for="@Model.Feature.FeatureId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Feature.Name" class="control-label">Name</label>
        <input asp-for="@Model.Feature.Name" class="form-control" />
        <span asp-validation-for="@Model.Feature.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="button btn btn-dark" />
    </div>
</form>