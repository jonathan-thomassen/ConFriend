@page
@model ConFriend.Pages.Admin.EventTest.IndexModel
@{
}
<p>
    <a class="button btn btn-success" asp-page="/Admin/EventTest/CreateEvent">Create New Event</a>
</p>

<h4> List of Events</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                EventId
            </th>
            <th>
                SpeakerId
            </th>
            <th>
                RoomId
            </th>
            <th>
                ConferenceId
            </th>
            <th>
                Name
            </th>
            <th>
                StartTime
            </th>
            <th>
                EndTime
            </th>
            <th>
                Type
            </th>
            <th>
                Description
            </th>
            <th>
                Capacity
            </th>
            <th>
                Image
            </th>
            <th>
                Hidden
            </th>
            <th>
                Cancelled
            </th>
            <th>
                RoomHidden
            </th>
            <th>
                RoomCancelled
            </th>

        </tr>
    </thead>
    <tbody>
    @if (Model.Events.Count() != 0)
    {
        @foreach (var item in Model.Events)
        {
        <tr>
            <td>
                @item.EventId
            </td>
            <td>
                @item.SpeakerId
            </td>
            <td>
                @item.RoomId
            </td>
            <td>
                @item.ConferenceId
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.StartTime
            </td>
            <td>
                @item.EndTime
            </td>
            <td>
                @item.Type
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Capacity
            </td>
            <td>
                @if (item.Image != "")
                {
                    <img src="~/rooms/@item.Image" style="max-height: 50px" alt="image"/>
                }
            </td>
            <td>
                @item.Hidden
            </td>
            <td>
                @item.Cancelled
            </td>
            <td>
                @item.RoomHidden
            </td>
            <td>
                @item.RoomCancelled
            </td>
            <td>
                <p>
                    <a class="button btn btn-primary" asp-page="/Admin/EventTest/EditEvent" asp-route-eId="@item.EventId">Edit Event</a>
                    <a class="button btn btn-primary" asp-page="/Admin/EventTest/Image" asp-route-Id="@item.EventId">Edit Image</a>
                    <a class="button btn btn-danger" asp-page="/Admin/EventTest/DeleteEvent" asp-route-eId="@item.EventId">Delete</a>
                </p>
            </td>
        </tr>
        }
    }
</table>