@page
@model ConFriend.Pages.Admin.ConferencePages.EditModel
@{
    ViewData["Title"] = "Edit conference";
}

<h2>Edit conference</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Conference.ConferenceId" class="control-label"></label>
        @Model.Conference.ConferenceId
    </div>
    <div class="form-group">
        <label asp-for="@Model.Conference.VenueId" class="control-label"></label>
        @Model.Conference.VenueId
    </div>
    <div class="form-group">
        <label asp-for="@Model.Conference.Name" class="control-label"></label>
        <input asp-for="@Model.Conference.Name" class="form-control" />
        <span asp-validation-for="Conference.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Edit" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}