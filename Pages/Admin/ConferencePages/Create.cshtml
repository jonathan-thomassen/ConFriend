@page
@model ConFriend.Pages.Admin.ConferencePages.CreateModel
@{
    ViewData["Title"] = "Create conference";
}

<h2>Create a new conference</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Venue:</label>
        <select asp-for="@Model.Conference.VenueId" asp-items="@Model.Venues"></select>
        <span asp-validation-for="Conference.VenueId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Conference.Name" class="control-label"></label>
        <input asp-for="@Model.Conference.Name" class="form-control" />
        <span asp-validation-for="Conference.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}