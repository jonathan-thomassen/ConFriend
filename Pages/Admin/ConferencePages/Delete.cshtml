@page
@model ConFriend.Pages.Admin.ConferencePages.DeleteModel
@{
    ViewData["Title"] = "Delete conference";
}

<h1>Delete conference</h1>

<form method="post">
    <h4>Are you sure you want to delete this conference?</h4>

    <div class="form-group">
        <label asp-for="@Model.Conference.ConferenceId" class="control-label"></label>
        @Model.Conference.ConferenceId
    </div>
    <div class="form-group">
        <label class="control-label">Venue:</label>
        @Model.Venues.Find(venue => venue.VenueId.Equals(Model.Conference.VenueId))?.Name
    </div>
    <div class="form-group">
        <label asp-for="@Model.Conference.Name" class="control-label"></label>
        @Model.Conference.Name
    </div>
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
</form>
