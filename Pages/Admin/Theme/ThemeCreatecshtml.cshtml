@page "{id?}"
@model ConFriend.Pages.ThemeCreatecshtmlModel
@{
    ViewData["Title"] = Model.IsNewEntry ? "Add Speaker" : "Edit Speaker";
}
<h1>Create Location</h1>
<form method="post">

    <div class="form-group">
        <label asp-for="@Model.speak.FirstName" class="control-label"></label>
        <input asp-for="@Model.speak.FirstName" class="form-control" />
        <span asp-validation-for="speak.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.speak.LastName" class="control-label"></label>
        <input asp-for="@Model.speak.LastName" class="form-control" />
        <span asp-validation-for="speak.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.speak.Email" class="control-label"></label>
        <input asp-for="@Model.speak.Email" class="form-control" />
        <span asp-validation-for="speak.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.speak.Image" class="control-label"></label>
        <input asp-for="@Model.speak.Image" class="form-control" />
        <span asp-validation-for="speak.Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.speak.Description" class="control-label"></label>
        <input asp-for="@Model.speak.Description" class="form-control" />
        <span asp-validation-for="speak.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.speak.Title" class="control-label"></label>
        <input asp-for="@Model.speak.Title" class="form-control" />
        <span asp-validation-for="speak.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn btn-primary">Save</button>
        @if (!Model.IsNewEntry)
        {
            <button type="submit" asp-page-handler="Delete" class="btn btn btn-warning">Delete</button>
        }
    </div>
</form>