@page
@model ConFriend.Pages.Admin.VenuePages.CreateModel
@{
    ViewData["Title"] = "Create venue";
}

<h2>Create a new venue</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.Venue.Name" class="control-label"></label>
        <input asp-for="@Model.Venue.Name" class="form-control" />
        <span asp-validation-for="Venue.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}